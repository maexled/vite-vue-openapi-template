{
  "name": "vite-vue-openapi-template",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "npm run build && wrangler dev",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "schema": "node scripts/fetch-openapi.ts",
    "generate": "npm run schema && openapi-ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "db:generate": "drizzle-kit generate",
    "predeploy": "wrangler d1 migrations apply DB --remote",
    "seedLocalD1": "wrangler d1 migrations apply DB --local"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@tanstack/vue-query": "^5.85.3",
    "chanfana": "^2.8.2",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.1",
    "node-fetch": "^3.3.2",
    "vue": "^3.5.18",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.5.1",
    "vuetify": "^3.9.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.11.2",
    "@cloudflare/vitest-pool-workers": "^0.8.66",
    "@hey-api/openapi-ts": "0.80.10",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^3.2.4",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.4",
    "globals": "^16.3.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "~5.8.0",
    "vite": "^7.1.2",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "~3.2.0",
    "vue-tsc": "^3.0.4",
    "wrangler": "^4.30.0"
  }
}
